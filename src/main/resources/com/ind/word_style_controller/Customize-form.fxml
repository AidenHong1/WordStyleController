<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ind.word_style_controller.CustomizeController"
      prefWidth="650" prefHeight="500"
      minWidth="600" minHeight="400">
      
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>
    
    <top>
        <VBox spacing="10">
            <Label text="样式配置" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
            <Separator/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="添加新样式"
                    onAction="#handleAddStyle"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Label text="添加自定义样式，设置ID将从100开始自动递增" style="-fx-font-style: italic;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <VBox>
                <TitledPane text="样式列表" expanded="true" collapsible="false">
                    <VBox fx:id="stylesContainer" spacing="10" style="-fx-padding: 10;">
                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5"/>
                        </padding>
                    </VBox>
                </TitledPane>
            </VBox>
        </ScrollPane>
    </center>
    
    <bottom>
        <VBox spacing="10">
            <Separator/>
            <HBox alignment="CENTER_RIGHT">
                <Button text="追加到XML文件末尾"
                    onAction="#handleAppendStyles"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                    prefWidth="150"/>
            </HBox>
        </VBox>
    </bottom>
    
</BorderPane>